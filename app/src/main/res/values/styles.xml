<resources>

    <!--기본 앱 화면 스타일, 액션바 없음-->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!--다이얼로그 스타일-->
    <style name="DialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/yellow</item>
    </style>

    <style name ="TransparentBase" parent="@style/AppTheme">
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="AppTheme.Transparent" parent="@style/TransparentBase"/>

    <!--다이얼로그-->
    <style name="AlertDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:textColor">#000000</item>
        <item name="android:textColorPrimary">#595959</item>
        <item name="android:colorAccent">@color/yellow</item>
    </style>
</resources>
