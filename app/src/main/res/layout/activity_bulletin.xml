        android:id="@+id/line2_textView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/bulltein_line"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@id/line1_textView"
        app:layout_constraintLeft_toRightOf="@id/left_guideline"
        app:layout_constraintRight_toLeftOf="@id/right_guideline"
        app:layout_constraintBottom_toTopOf="@id/line3_textView"/>

    <TextView
        android:id="@+id/left2_textView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
